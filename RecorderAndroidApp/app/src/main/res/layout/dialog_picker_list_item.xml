<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_pick_list_item_textView_Key"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="" />

    <TextView
        android:id="@+id/dialog_pick_list_item_textView_Value"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/height_margin_default"
        android:layout_marginRight="@dimen/height_margin_default"
        android:gravity="center_vertical"
        android:textColor="@color/fontColor"
        style="@style/CustomTheme.TextView"
        android:text="TextView" />
</android.support.constraint.ConstraintLayout>