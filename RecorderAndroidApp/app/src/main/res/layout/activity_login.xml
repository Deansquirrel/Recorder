<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context="com.yuansong.recorder.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_actionbar_activity_login"
            android:background="@color/whiteColor"
            app:titleTextColor="@color/themeBlueColor" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:layout_margin="@dimen/height_margin_thick"
            android:orientation="vertical">

            <FrameLayout
                android:background="@color/themeRedColor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33">
                <EditText
                    android:id="@+id/edit_text_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:hint="UserName"
                    style="@style/CustomTheme.EditText"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="@dimen/height_margin_default"
                    android:layout_marginRight="@dimen/height_margin_default"
                    android:text="" />
            </FrameLayout>
            <FrameLayout
                android:background="@color/themeBlueColor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33">
            </FrameLayout>
            <FrameLayout
                android:background="@color/themeRedColor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.34">
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"/>
            </FrameLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_margin_default"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/textViewVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_overlay"
                android:text="TextView"
                />
        </FrameLayout>
    </LinearLayout>








