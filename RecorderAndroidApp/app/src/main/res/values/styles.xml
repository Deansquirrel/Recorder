    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionBarSize">@dimen/height_actionbar_activity</item>-->
    </style>

    <style name="CustomTheme.TextView">
        <item name="android:height">@dimen/height_context_line_default</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="CustomTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:background">@drawable/buttom_background</item>
    </style>

    <style name="CustomTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/black_overlay</item>
        <item name="android:singleLine">true</item>
        <item name="android:colorControlNormal">@color/black_overlay</item>
        <item name="android:colorControlActivated">@color/black_overlay</item>

    </style>
