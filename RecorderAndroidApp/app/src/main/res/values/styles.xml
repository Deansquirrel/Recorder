    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/whiteColor</item>
        <item name="colorPrimaryDark">@color/whiteColor</item>
        <item name="colorAccent">@color/whiteColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="CustomTheme.Toolbar.Dark" parent="@style/CustomTheme.Toolbar">
        <item name="android:background">@color/themeBlueColor</item>
        <item name="android:theme">@style/CustomTheme.Toolbar.Theme.Dark</item>
        <item name="android:popupTheme">@style/CustomTheme.Toolbar.PopupThem.Dark</item>
    </style>

    <style name="CustomTheme.Toolbar.Light" parent="@style/CustomTheme.Toolbar">
        <item name="android:background">@color/whiteColor</item>
        <item name="android:theme">@style/CustomTheme.Toolbar.Theme.Light</item>
        <item name="android:popupTheme">@style/CustomTheme.Toolbar.PopupThem.Light</item>
    </style>

    <style name="CustomTheme.Toolbar.Theme.Light" parent="@style/ThemeOverlay.AppCompat.Light"></style>

    <style name="CustomTheme.Toolbar.PopupThem.Light" parent="@style/ThemeOverlay.AppCompat.Light"></style>

    <style name="CustomTheme.Toolbar.Theme.Dark" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="CustomTheme.Toolbar.PopupThem.Dark" parent="@style/ThemeOverlay.AppCompat.Light"></style>


    <style name="CustomTheme.Toolbar.Light.Login" parent="@style/CustomTheme.Toolbar.Light">
        <item name="titleTextAppearance">@style/CustomTheme.Toolbar.Light.Login.Title</item>
    </style>

    <style name="CustomTheme.Toolbar.Light.Login.Title">
        <item name="android:textSize">@dimen/text_size_login_title</item>
        <item name="android:textColor">@color/themeBlueColor</item>
    </style>

    <style name="CustomTheme.TextView">
        <item name="android:height">@dimen/height_context_line_default</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CustomTheme.TextView.Title" parent="@style/CustomTheme.TextView">
        <item name="android:textColor">@color/fontLightColor</item>
    </style>

    <style name="CustomTheme.TextView.DialogTitle" parent="CustomTheme.TextView">
        <item name="android:textColor">@color/fontLightColor</item>
    </style>

    <style name="CustomTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="CustomTheme.Button.Link" parent="CustomTheme.Button">
        <item name="android:textColor">@color/themeBlueColor</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="CustomTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/black_overlay</item>
        <item name="android:singleLine">true</item>
        <item name="android:colorControlNormal">@color/black_overlay</item>
        <item name="android:colorControlActivated">@color/black_overlay</item>
    </style>
